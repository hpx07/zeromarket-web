          "files": {
            "useWatchlistStore.ts": "Watchlist state",
            "usePortfolioStore.ts": "Portfolio state",
            "useThemeStore.ts": "Theme preferences",
            "useUserStore.ts": "User preferences"
          }
        },
        "/hooks": {
          "description": "Custom React hooks",
          "files": {
            "useStockPrice.ts": "Fetch stock prices",
            "useCryptoPrice.ts": "Fetch crypto prices",
            "useNews.ts": "Fetch news feed",
            "useWebSocket.ts": "WebSocket connection",
            "useLocalStorage.ts": "localStorage wrapper"
