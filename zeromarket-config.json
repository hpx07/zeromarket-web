{
  "project": {
    "name": "ZeroMarket",
    "tagline": "Your All-in-One Serverless Market Intelligence Platform",
    "version": "1.0.0",
    "description": "A production-ready, serverless platform for live stock prices, crypto analysis, finance news, and comprehensive trading tools"
  },

  "tech_stack": {
    "frontend": {
      "framework": "Next.js 14 (App Router)",
      "language": "TypeScript",
      "styling": "TailwindCSS + shadcn/ui",
      "3d_library": "Three.js + React Three Fiber (R3F)",
      "state_management": "Zustand",
      "data_fetching": "TanStack Query (React Query)",
      "forms": "React Hook Form + Zod",
      "charts": [
        "Lightweight Charts (TradingView)",
        "Recharts (for additional visualizations)",
        "Chart.js (for specific tools)"
      ],
      "animations": "Framer Motion",
      "icons": "Lucide React",
      "utilities": [
        "date-fns (date manipulation)",
        "numeral.js (number formatting)",
        "lodash (utilities)"
      ]
    },
    "backend": {
      "type": "Serverless",
      "platform": "Vercel Edge Functions / Next.js API Routes",
      "caching": "Vercel Edge Config + SWR",
      "scheduled_jobs": "Vercel Cron Jobs (for alerts)"
    },
    "storage": {
      "client_side": "IndexedDB (via Dexie.js)",
      "local_storage": "localStorage (for preferences)",
      "optional_backend": "Supabase (for user authentication and cloud sync)"
    },
    "deployment": {
      "platform": "Vercel",
      "ci_cd": "GitHub Actions (optional)",
      "analytics": "Vercel Analytics + Plausible (privacy-friendly)"
    }
  },

  "free_apis": {
    "stocks_indian": {
      "nse_india": {
        "url": "https://www.nseindia.com/api",
        "endpoints": {
          "nifty_live": "/equity-stockIndices?index=NIFTY%2050",
          "bank_nifty_live": "/equity-stockIndices?index=NIFTY%20BANK",
          "option_chain_nifty": "/option-chain-indices?symbol=NIFTY",
          "option_chain_banknifty": "/option-chain-indices?symbol=BANKNIFTY",
          "stock_quote": "/quote-equity?symbol={SYMBOL}"
        },
        "auth": "None (requires headers to bypass CORS)",
        "rate_limit": "Use serverless proxy to avoid CORS",
        "notes": "Needs custom headers: User-Agent, Accept-Language, Accept-Encoding"
      }
    },
    "stocks_global": {
      "yahoo_finance": {
        "library": "yahoo-finance2 (npm)",
        "endpoints": {
          "quote": "yahooFinance.quote(symbol)",
          "historical": "yahooFinance.historical(symbol, options)",
          "chart": "yahooFinance.chart(symbol)"
        },
        "auth": "None",
        "rate_limit": "Reasonable usage (no official limit)",
        "symbols_example": ["AAPL", "GOOGL", "TSLA", "MSFT", "AMZN"]
      },
      "alpha_vantage": {
        "url": "https://www.alphavantage.co/query",
        "api_key": "Get free key from alphavantage.co",
        "rate_limit": "25 requests/day (free tier)",
        "endpoints": {
          "quote": "function=GLOBAL_QUOTE&symbol={symbol}",
          "intraday": "function=TIME_SERIES_INTRADAY&symbol={symbol}&interval=5min",
          "daily": "function=TIME_SERIES_DAILY&symbol={symbol}"
        },
        "use_case": "Backup for Yahoo Finance, earnings calendar"
      }
    },
    "crypto": {
      "coingecko": {
        "url": "https://api.coingecko.com/api/v3",
        "api_key": "None required (demo tier)",
        "rate_limit": "10-50 calls/minute (demo)",
        "endpoints": {
          "simple_price": "/simple/price?ids={ids}&vs_currencies=usd,inr&include_24hr_change=true",
          "coin_market_chart": "/coins/{id}/market_chart?vs_currency=usd&days={days}",
          "trending": "/search/trending",
          "global": "/global",
          "top_coins": "/coins/markets?vs_currency=usd&order=market_cap_desc&per_page=100"
        }
      },
      "coincap": {
        "url": "https://api.coincap.io/v2",
        "websocket": "wss://ws.coincap.io/prices?assets=bitcoin,ethereum",
        "api_key": "None required",
        "rate_limit": "200 requests/minute",
        "endpoints": {
          "assets": "/assets",
          "asset_history": "/assets/{id}/history?interval=d1",
          "markets": "/markets"
        },
        "use_case": "Real-time WebSocket for live prices"
      },
      "binance_public": {
        "url": "https://api.binance.com/api/v3",
        "api_key": "None (public endpoints)",
        "rate_limit": "1200 requests/minute",
        "endpoints": {
          "ticker_24hr": "/ticker/24hr?symbol={symbol}",
          "klines": "/klines?symbol={symbol}&interval={interval}",
          "ticker_price": "/ticker/price"
        },
        "use_case": "OHLCV data for charts, 24h statistics"
      },
      "blockchain_com": {
        "url": "https://blockchain.info",
        "endpoints": {
          "stats": "/stats",
          "pools": "/pools?timespan=5days",
          "charts": "/charts/{chart-type}?timespan=1year&format=json"
        },
        "use_case": "Bitcoin on-chain metrics"
      },
      "alternative_me": {
        "url": "https://api.alternative.me/fng",
        "endpoint": "/?limit=30",
        "use_case": "Crypto Fear & Greed Index"
      }
    },
    "news": {
      "rss_feeds": {
        "economic_times": "https://economictimes.indiatimes.com/markets/rssfeeds/1977021501.cms",
        "moneycontrol": "https://www.moneycontrol.com/rss/MCtopnews.xml",
        "coindesk": "https://www.coindesk.com/arc/outboundfeeds/rss/",
        "cointelegraph": "https://cointelegraph.com/rss",
        "reuters_business": "https://www.reutersagency.com/feed/?taxonomy=best-topics&post_type=best"
      },
      "cryptocompare_news": {
        "url": "https://min-api.cryptocompare.com/data/v2/news/",
        "api_key": "Get free key",
        "rate_limit": "100 calls/hour (free)"
      }
    },
    "forex": {
      "exchangerate_api": {
        "url": "https://api.exchangerate-api.com/v4/latest/USD",
        "rate_limit": "1500 requests/month (free)",
        "currencies": ["USD", "INR", "EUR", "GBP", "JPY", "AUD", "CAD"]
      },
      "fixer_io": {
        "url": "https://api.fixer.io/latest",
        "note": "Backup option, limited free tier"
      }
    },
    "additional": {
      "ipapi": {
        "url": "https://ipapi.co/json/",
        "use_case": "Get user location for timezone/currency"
      }
    }
